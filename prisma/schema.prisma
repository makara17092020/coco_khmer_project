generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum Role {
USER
ADMIN
MODERATOR // optional, add/remove as needed
}

model User {
id Int @id @default(autoincrement())
name String
email String @unique
password String
avatar String
role Role @default(USER) // ðŸ‘ˆ Add this line
createdAt DateTime @default(now())
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String
  products  Product[]
  createdAt DateTime  @default(now())
}

model Product {
  id         Int       @id @default(autoincrement())
  name       String
  size       String[]  @default([])        // array of sizes
  categoryId Int
  desc       String
  isTopSeller Boolean  @default(false)
  images     String[]
  category   Category  @relation(fields: [categoryId], references: [id])
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @default(now())    // âœ… add default value
}



model Partnership {
  id                       Int                     @id @default(autoincrement())
  name                     String
  image                    String
  categoryPartnershipId    Int
  categoryPartnership      CategoryPartnership     @relation(fields: [categoryPartnershipId], references: [id])
  createdAt DateTime @default(now())
}

model CategoryPartnership {
  id            Int            @id @default(autoincrement())
  name          String
  partnerships  Partnership[] 
}
model contact {
  id            Int            @id @default(autoincrement()) 
  fullName String
  email String
  message String
  createdAt DateTime @default(now())
  isRead    Boolean  @default(false)
}