generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  avatar    String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String
  createdAt DateTime  @default(now())
  products  Product[]
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  categoryId  Int
  desc        String
  createdAt   DateTime @default(now())
  images      String[] @default([])
  isTopSeller Boolean  @default(false)
  size        String[] @default([])
  updatedAt   DateTime @updatedAt
  category    Category @relation(fields: [categoryId], references: [id])
}

model Partnership {
  id                    Int                 @id @default(autoincrement())
  name                  String
  image                 String
  categoryPartnershipId Int
  createdAt             DateTime            @default(now())
  categoryPartnership   CategoryPartnership @relation(fields: [categoryPartnershipId], references: [id])
}

model CategoryPartnership {
  id           Int           @id @default(autoincrement())
  name         String
  partnerships Partnership[]
}

model contact {
  id        Int      @id @default(autoincrement())
  fullName  String
  email     String
  message   String
  createdAt DateTime @default(now())
  isRead    Boolean  @default(false)
}

enum Role {
  USER
  ADMIN
  MODERATOR
}
